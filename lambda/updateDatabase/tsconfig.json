{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "./dist", // Output directory relative to the tsconfig.json location
    "baseUrl": ".", // Base URL set to the current directory
    "paths": {
      "@/*": ["../../*"] // Adjusting path aliases to be relative to the new baseUrl
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false // Ensure JavaScript files are emitted
  },
  "include": [
    "./**/*.ts" // Include all TypeScript files in the current directory
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
